@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<CargoDetails>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("search")
        <input type="submit" value="Ara" />
    </p>
}

<h2>Kargolar</h2>

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Employee</td>
            <td>@item.DeliveryPerson</td>
            <td>@item.Date</td>
            <td>@item.TrackingCode</td>

            <td><a href="/Cargo/CargoTracking/@item.TrackingCode" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/Cargo/AddCargo/" class="btn btn-info">Yeni Kargo Girişi</a>

