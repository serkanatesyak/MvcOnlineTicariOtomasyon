@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Product


@{
    ViewBag.Title = "ProductUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProductID)

    <h6>Ürün Adı</h6>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />

    <h6> Marka </h6>
    @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control" })
    <br />

    <h6> Stok </h6>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />

    <h6> Alış Fiyatı </h6>
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />


    <h6> Satış Fiyatı </h6>
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />


    <h6> Kategori </h6>
    @*@Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.varaible, new { @class = "form-control" })

    <br />

    <h6>Ürün Görsel</h6>
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <br />

    <h6>Durum</h6>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">Güncelle</button>

}

