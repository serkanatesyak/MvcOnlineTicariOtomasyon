@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SalesMove>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>

            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>

            <td>@k.SalesMoveID</td>
            <td>@k.Product.ProductName</td>
            <td>@k.Customer.CustomerName @k.Customer.CustomerSurName</td>
            <td>@k.Employee.EmployeeName @k.Employee.EmployeeSurName</td>
            <td>@k.Quantity</td>
            <td>@k.Price</td>
            <td>@k.TotalPrice</td>
            <td>@k.Date</td>
            <td><a href="/Sales/GetSales/@k.SalesMoveID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Sales/SalesDetails/@k.SalesMoveID" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>

        </tr>
    }

</table>
<br />

<a href="/Sales/NewSales/" class="btn btn-info">Yeni Satış Yap </a>

