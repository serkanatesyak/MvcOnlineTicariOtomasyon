@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.ClassGroup3>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0; }

                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{ no++;} @no</td>
                        <td>@x.Brand</td>
                        <td>
                            @if (x.Count >= 1 && x.Count <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Count >= 4 && x.Count <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Count >= 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 80%"></div>
                                </div>
                            }


                        </td>
                        <td>
                            @if (x.Count >= 1 && x.Count <= 3)
                            {
                                <span class="badge bg-danger">@x.Count</span>
                            }
                            @if (x.Count >= 4 && x.Count <= 6)
                            {
                                <span class="badge bg-warning">@x.Count</span>
                            }
                            @if (x.Count >= 7)
                            {
                                <span class="badge bg-success">@x.Count</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>