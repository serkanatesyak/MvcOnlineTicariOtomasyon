@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SalesMove>
@{
    ViewBag.Title = "SalesHistory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.dper</li>
</ol>


<table class="table table-condensed">

    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.SalesMoveID</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Employee.EmployeeName @x.Employee.EmployeeSurName</td>
            <td>@x.Price</td>
            <td>@x.Quantity</td>
            <td>@x.TotalPrice</td>
            <td>@x.Date</td>
            <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></td>


        </tr>
    }
</table>


