
@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Customer
@using (Html.BeginForm("CustomerInfoUpdate", "CustomerPanel", FormMethod.Post))
{

    <form class="form-horizontal">
        
        @Html.HiddenFor(x=>x.CustomerID)

            <div class="form-group row">

                <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName2" class="col-sm-2 col-form-label">Soyad</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.CustomerSurName, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputExperience" class="col-sm-2 col-form-label">Mail Adresi</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.CustomerMail, new { @class = "form-control" })

                </div>

            </div>

            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Şehir</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>

            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <div class="checkbox">


                    </div>

                </div>

            </div>

            <div class="form-group row">

                <div class="offset-sm-2 col-sm-10">

                    <button type="submit" class="btn btn-danger">Güncelle</button>

                </div>

            </div>

    </form>
}